{

    "id": "user.1",
    
    "type": "object",

    "properties": {

        "username" : {

            "type" : "string",

            "description" : "A valid username when coupled with id system"
        },

        "id-system" : {

            "type" : {

                "enum" : [ "openid", "gmail", "test" ]
            
            }
        },

        "roles" : {

            "type" : "array",

            "items" : {

                "type" : { "$ref" : "user-role.1.json" }
            
            }
        }
    }
}

