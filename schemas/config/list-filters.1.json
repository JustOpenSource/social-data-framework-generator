{
    
    "id": "list-filters.1",
    
    "type": "object",

    "properties": {

        "sort-by-options" : {
                
            "type" : "array",

            "description" : "Array of schema fields can be used to sort list.",
            
            "items" : {
                
                "type" : { "$ref" : "core/schema-feild.1" }

            }
        },

        "sort-by-default" : {
            
            "type" : "object",

            "description" : "The default field and order for the list.",

            "properties" : {
                
                "sort-type" : {

                    "type" : { "enum" : ["ascending", "descending"] },

                    "description" : "The sort order of the default ."

                },

                "field" : {
                    
                    "type" : { "$ref" : "core/schema-field.1" },

                    "description" : "The schema field that is the default sort field."

                }
            }
        },

        "filters" : {
            
            "type" : "array",

            "items" : {

                "type" : { "$ref" : "core/schema-field.1" }

            }
        },

        "filter-defaults" : {
            
            "type" : "array",

            "items" : {

                "type" : "object",

                "properties" : {

                    "field" : {

                        "type" : { "$ref" : "core/schema-field.1" }

                    },

                    "default-value" : {}
                }
            }
        }
    }
}

/*
EXAMPLE
{
    "sort-by-options" : [{
        "value" : "path.to.schema.field"
    }, {
        "value" : "other.path.to.schema.field"
    }],

    "sort-by-default" : {
        "sort-type" : {
            "value" : "ascending"
        },
        "field" : {
            "value" : "path.to.schema.field"
        }
    },
    "filters" : [{
        "value" : "path.to.schema.field"
    }, {
        "value" : "other.path.to.schema.field" 
    }],
    "filter-defaults" : [{
        "field" : {
            "value" : "path.to.schema.field"
        },
        "default-value" : "foo"
    }]
}
*/